@model Blogger.Domain.ViewModels.PostDetailModel;
@inject IWebHostEnvironment _hostingEnvironment;

@{
    ViewData["Title"] = "View";
}

<h1>Post details</h1>

<div>

    <hr />
    @if (Model.FilePath is not null)
    {
        @if (Model.FilePath.Contains(".mp4"))
        {
            <video controls="controls" autoplay>
                <source src="~/videos/@Model.FilePath" type="video/mp4" class="img-thumbnail rounded w-50" />
            </video>
        }
        else
        {
            <img src="~/images/@Model.FilePath" alt="Not found" class="img-thumbnail rounded w-50" />
        }
    }
    <dl class="row">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10 view-post-content" >
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPublished)
        </dt>
        <dd class="col-sm-10">
            @Model.IsPublished
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        @if(Model.IsPublished){
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PublishedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PublishedAt)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to list</a>
</div>