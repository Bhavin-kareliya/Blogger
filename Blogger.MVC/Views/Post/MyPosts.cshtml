@model IEnumerable<Blogger.Domain.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Blog Management System</h1>


<a class="btn btn-primary my-3" asp-controller="Post" asp-action="Create">Create New Post</a>

<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().IsPublished)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() == 0)
        {
            <tr>
                <td colspan="6">No Post Found!</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="post-content">
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @(item.IsPublished)
                </td>
                <td>
                    <a asp-controller="Post" asp-action="View" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                    <a asp-controller="Post" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    <a onclick="return confirm('Are you sure to delete this blog?');" class="btn btn-danger" asp-controller="Post" asp-action="Delete" asp-route-id="@item.Id" >Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>