@model Blogger.Domain.ViewModels.PostModel;

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit post</h1>

<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Title" class="control-label required"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Content" class="control-label"></label>
                <textarea class="form-control" asp-for="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label class="control-label required">Do you want to publish?</label>
                <div class="d-flex">
                    <div class="form-check me-3">
                        <input class="form-check-input" type="radio" asp-for="IsPublished" value="true" id="Yes">
                        <label class="form-check-label" for="Yes">
                            Yes
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="IsPublished" value="false" id="No">
                        <label class="form-check-label" for="No">
                            Not at a moment
                        </label>
                    </div>
                </div>
                <span asp-validation-for="IsPublished" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" asp-route-id="@ViewBag.Id" value="Update" class="btn btn-primary" />
                <a asp-asp-controller="Post" asp-action="MyPosts" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}